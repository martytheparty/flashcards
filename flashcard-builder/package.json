{
  "name": "flashcard-builder",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-ilm": "ng build -c ilikeemail",
    "build-github": "ng build -c github",
    "deploy-github": "ng build -c github && npx angular-cli-ghpages --dir=dist/flashcard-builder/browser --branch=gh-pages",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false --coverage",
    "gh-cli": "npm install -D angular-cli-ghpages",
    "ngmaterial": "ng add @angular/material"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/cdk": "^21.1.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.1.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "angular-cli-ghpages": "^3.0.2",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}